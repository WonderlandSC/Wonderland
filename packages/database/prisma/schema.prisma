generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Student {
  id             String   @id @default(cuid())
  firstName      String
  lastName       String
  email          String
  clerkId        String   @unique
  organizationId String
  grades         Grade[]
  groupId        String?
  group          Group?   @relation(fields: [groupId], references: [id])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([groupId])
}

model Group {
  id                String    @id @default(cuid())
  name              String
  description       String?
  regularPrice      Float
  earlyBirdPrice    Float
  earlyBirdDeadline DateTime
  schedule          String
  students          Student[]
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@unique([name])
}

model Grade {
  id          String   @id @default(cuid())
  subject     String
  value       Float
  description String?
  studentId   String
  student     Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([studentId])
}

model Invitation {
  id             String    @id @default(cuid())
  token          String    @unique
  organizationId String
  expiresAt      DateTime
  usedAt         DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@index([token])
}
